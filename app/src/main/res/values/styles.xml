<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Dialog.Alert" >
        <item name="android:textColor">#000</item>
        <item name="android:colorBackground">#FFF</item>
    </style>

    <style name="TextAppearance.AppTheme.Subhead" parent="@style/TextAppearance.AppCompat.Subhead" >
        <item name="android:textSize">@dimen/subhead_text_size</item>
    </style>

    <style name="TextAppearance.AppTheme.Medium" parent="@style/TextAppearance.AppCompat.Medium" >
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

</resources>
